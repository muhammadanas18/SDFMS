                <label asp-for="TreatmentDetails" class="control-label"></label>
                <input asp-for="TreatmentDetails" class="form-control" />
                <span asp-validation-for="TreatmentDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextCheckupDate" class="control-label"></label>
                <input asp-for="NextCheckupDate" class="form-control" />
                <span asp-validation-for="NextCheckupDate" class="text-danger"></span>
            </div>
