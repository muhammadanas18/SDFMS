@model SDFMS.Models.HealthRecord

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<h1>Edit</h1>

<h4>HealthRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
