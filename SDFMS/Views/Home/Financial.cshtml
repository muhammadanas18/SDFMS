
@{
    ViewData["Title"] = "Financial";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="title">
    <h1>Financial Management</h1>
</div>

<div class="financial-component">
    <div class="financial-summary">
        <h2>Financial Overview</h2>
        <div class="summary-stats">
            <div class="stat-card">
                <h3>Total Income</h3>
                <p id="total-income">$0.00</p>
            </div>
            <div class="stat-card">
                <h3>Total Expenses</h3>
                <p id="total-expenses">$0.00</p>
            </div>
            <div class="stat-card">
                <h3>Net Profit</h3>
                <p id="net-profit">$0.00</p>
            </div>
            <div class="stat-card">
                <h3>Available Balance</h3>
                <p id="available-balance">$0.00</p>
            </div>
        </div>
    </div>

    <div class="financial-charts">
        <div class="chart-container">
            <h3>Income vs Expenses</h3>
            <canvas id="income-expense-chart"></canvas>
        </div>
        <div class="chart-container">
            <h3>Expense Breakdown</h3>
            <canvas id="expense-breakdown-chart"></canvas>
        </div>
    </div>

    <div class="financial-records">
        <div class="records-header">
            <h2>Recent Transactions</h2>
            <div class="action-buttons">
                <button class="btn-add" id="add-transaction">
                    Add Transaction
                </button>
            </div>
        </div>

        <div class="transactions-table-container">
            <table class="transactions-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="transactions-body">
                    <!-- Transactions will be added here dynamically -->
                </tbody>
            </table>
        </div>
    </div>

    <div class="budget-section">
        <h2>Budget Management</h2>
        <div class="budget-cards">
            <div class="budget-card">
                <h3>Monthly Budget</h3>
                <p id="monthly-budget">$0.00</p>
                <div class="progress-bar">
                    <div class="progress" id="budget-progress"></div>
                </div>
                <p id="budget-status">0% Used</p>
            </div>
            <div class="budget-card">
                <h3>Upcoming Bills</h3>
                <div class="bill-list" id="bill-list">
                    <!-- Bills will be added here dynamically -->
                </div>
            </div>
        </div>
    </div>
</div>
        </div>

<!-- Add Transaction Modal -->
<div class="modal" id="transaction-modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>Add New Transaction</h2>
        <form id="transaction-form">
            <div class="form-group">
                <label for="transaction-date">Date</label>
                <input type="date" id="transaction-date" required />
            </div>
            <div class="form-group">
                <label for="transaction-description">Description</label>
                <input type="text" id="transaction-description" required />
            </div>
            <div class="form-group">
                <label for="transaction-category">Category</label>
                <select id="transaction-category" required>
                    <option value="">Select Category</option>
                    <option value="salary">Salary</option>
                    <option value="business">Business</option>
                    <option value="food">Food</option>
                    <option value="utilities">Utilities</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="transportation">Transportation</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="transaction-amount">Amount</label>
                <input type="number"
                       id="transaction-amount"
                       step="0.01"
                       min="0"
                       required />
            </div>
            <div class="form-group">
                <label for="transaction-type">Type</label>
                <select id="transaction-type" required>
                    <option value="income">Income</option>
                    <option value="expense">Expense</option>
                </select>
            </div>
            <button type="submit" class="btn-submit">Save Transaction</button>
        </form>
    </div>
</div>

