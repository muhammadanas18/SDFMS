
@{
    ViewData["Title"] = "Feedingscheduler";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="title">
    <h1>Feeding Scheduler</h1>
</div>

<div class="feeding-scheduler-component">
    <div class="data-display">
        <div class="calendar-view">
            <h2>Calendar View</h2>
            <div class="calendar" id="calendar">
                <!-- Calendar will be generated by JavaScript -->
            </div>
        </div>

        <div class="upcoming-feedings">
            <h2>Upcoming Feedings</h2>
            <div class="feeding-list" id="feeding-list">
                <!-- Feedings will be added here dynamically -->
            </div>
        </div>

        <div class="feeding-stats">
            <h2>Feeding Statistics</h2>
            <div class="summary-stats">
                <div class="stat-card">
                    <h3>Average Daily Amount</h3>
                    <p id="avg-feeding-amount">0.0 kg</p>
                </div>
                <div class="stat-card">
                    <h3>Total Feedings</h3>
                    <p id="total-feedings">0</p>
                </div>
                <div class="stat-card">
                    <h3>Upcoming Feedings</h3>
                    <p id="upcoming-feedings-count">0</p>
                </div>
            </div>
        </div>
    </div>
</div>

