
@{
    ViewData["Title"] = "Milkproduction";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="title">
    <h1>Milk Production Dashboard</h1>
</div>

<div class="milk-production-component">
    <div class="data-input">
        <h2>Add New Production</h2>
        <form id="production-form">
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" required />
            </div>
            <div class="form-group">
                <label for="morning-yield">Morning Yield (L)</label>
                <input type="number"
                       id="morning-yield"
                       step="0.1"
                       min="0"
                       required />
            </div>
            <div class="form-group">
                <label for="evening-yield">Evening Yield (L)</label>
                <input type="number"
                       id="evening-yield"
                       step="0.1"
                       min="0"
                       required />
            </div>
            <button type="submit" class="btn-submit">Add Production</button>
        </form>
    </div>

    <div class="data-display">
        <div class="summary-stats">
            <div class="stat-card">
                <h3>Average Daily Yield</h3>
                <p id="avg-yield">0.0 L</p>
            </div>
            <div class="stat-card">
                <h3>Total Production</h3>
                <p id="total-production">0.0 L</p>
            </div>
        </div>

        <div class="chart-container">
            <canvas id="production-chart"></canvas>
        </div>

        <div class="production-list" id="production-list">
            <!-- Production entries will be added here dynamically -->
        </div>
    </div>
</div>

